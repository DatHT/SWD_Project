<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/activity_margin"
    android:background="@color/greenLight"
    >
    <ImageView
        android:src="@drawable/dummy_avatar2"
        android:id="@+id/item_boorkmark_thumb_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:background="@color/greenLight"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/greenLight"
            android:orientation="vertical">

            <TextView
                android:background="@color/greenLight"
                android:id="@+id/item_boorkmark_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/holo_blue_dark"
                />
            <TextView
                android:background="@color/greenLight"
                android:id="@+id/item_boorkmark_material_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ớt, đậu xanh, rau má"
                android:textColor="@color/textColor" />
        </LinearLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            rv_centered="true">
            <ImageButton
                android:id="@+id/item_boorkmark_delete_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete"
                android:scaleType="fitCenter"
                />

        </com.balysv.materialripple.MaterialRippleLayout>


    </LinearLayout>


</LinearLayout>
