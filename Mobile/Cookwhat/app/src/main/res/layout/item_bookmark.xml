<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:background="@drawable/item_background"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="18dp"
        >
        <ImageView
            android:src="@drawable/dummy_avatar2"
            android:id="@+id/item_boorkmark_thumb_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/item_boorkmark_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:paddingTop="5dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/item_boorkmark_material_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ớt, đậu xanh, rau má"
        android:paddingLeft="20dp"
        android:layout_margin="5dp"
        android:textSize="@dimen/text_margin"
        android:textColor="@color/textColor" />
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            rv_centered="true">
            <ImageButton
                android:id="@+id/item_boorkmark_delete_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete"
                android:scaleType="fitCenter"
                />

        </com.balysv.materialripple.MaterialRippleLayout>




</LinearLayout>
